<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
  http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Archetype Created Web Application</display-name>
  <listener>
    <listener-class>system.PostContextListener</listener-class>
  </listener>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <servlet>
    <servlet-name>profile</servlet-name>
    <servlet-class>web.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>profile</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChangeFirstName</servlet-name>
    <servlet-class>web.ChangeFirstNameServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChangeFirstName</servlet-name>
    <url-pattern>/change_first_name</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChangeLastName</servlet-name>
    <servlet-class>web.ChangeLastNameServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChangeLastName</servlet-name>
    <url-pattern>/change_last_name</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>change_password</servlet-name>
    <servlet-class>web.ChangePasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>change_password</servlet-name>
    <url-pattern>/change_password</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>blog</servlet-name>
    <servlet-class>web.BlogAtLocationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>blog</servlet-name>
    <url-pattern>/blog_location</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>web.LogInServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>create_post</servlet-name>
    <servlet-class>web.CreatePostServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>create_post</servlet-name>
    <url-pattern>/create_post</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>blog_main</servlet-name>
    <servlet-class>web.BlogMainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>blog_main</servlet-name>
    <url-pattern>/blog_main</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>web.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogOut</servlet-name>
    <servlet-class>web.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogOut</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginCheck</servlet-name>
    <servlet-class>web.LoginCheckServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginCheck</servlet-name>
    <url-pattern>/login_check</url-pattern>
  </servlet-mapping>
</web-app>
