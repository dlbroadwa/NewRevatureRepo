<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <listener>
        <listener-class>com.ex.web.AppContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>sessionCheck</servlet-name>
        <servlet-class>com.ex.web.SessionCheckServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>sessionCheck</servlet-name>
            <url-pattern>/sessionCheck</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.ex.web.LoginServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>login</servlet-name>
            <url-pattern>/login</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.ex.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>accountAdd</servlet-name>
        <servlet-class>com.ex.web.CreateAccServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>accountAdd</servlet-name>
            <url-pattern>/accountAdd</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>managerAccountAdd</servlet-name>
        <servlet-class>com.ex.web.ManagerCreateAccServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>managerAccountAdd</servlet-name>
            <url-pattern>/managerAccountAdd</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>productType</servlet-name>
        <servlet-class>com.ex.web.ProductTypesServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>productType</servlet-name>
            <url-pattern>/productType</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>com.ex.web.AddProductServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>addProduct</servlet-name>
            <url-pattern>/addProduct</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>com.ex.web.AllProductsServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>allProducts</servlet-name>
            <url-pattern>/allProducts</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>updateProduct</servlet-name>
        <servlet-class>com.ex.web.UpdateProductServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>updateProduct</servlet-name>
            <url-pattern>/updateProduct</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>allAccounts</servlet-name>
        <servlet-class>com.ex.web.AllAccountsServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>allAccounts</servlet-name>
            <url-pattern>/allAccounts</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>com.ex.web.CartServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>cart</servlet-name>
            <url-pattern>/shoppingcart</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>com.ex.web.AllOrdersServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>allOrders</servlet-name>
            <url-pattern>/allOrders</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>updateOrder</servlet-name>
        <servlet-class>com.ex.web.UpdateOrdersServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>updateOrder</servlet-name>
            <url-pattern>/updateOrder</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>addToCart</servlet-name>
        <servlet-class>com.ex.web.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addToCart</servlet-name>
        <url-pattern>/addtocart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderCheckout</servlet-name>
        <servlet-class>com.ex.web.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderCheckout</servlet-name>
        <url-pattern>/doCheckout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateAccount</servlet-name>
        <servlet-class>com.ex.web.UpdateAccountServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>updateAccount</servlet-name>
            <url-pattern>/updateAccount</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>order</servlet-name>
        <servlet-class>com.ex.web.ViewOrderServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>order</servlet-name>
            <url-pattern>/order</url-pattern>
        </servlet-mapping>
</web-app>
